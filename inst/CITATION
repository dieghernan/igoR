  header = "To cite the 'igoR' package in publications use this entry:",
  title = paste("igoR:", meta$Title),
  author = person("Diego", "HernangÃ³mez"),
  year = year,
  version = meta$Version,
  doi = "10.5281/zenodo.4442958",
  url = unlist(strsplit(meta$URL, ","))[1],
  abstract = abs
)


